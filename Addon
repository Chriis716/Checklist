# Section intro / cookbooks / notes (NOT checkable)
if ($section.PSObject.Properties.Name -contains 'intro' -and -not [string]::IsNullOrWhiteSpace([string]$section.intro)) {

    $introBorder = New-Object System.Windows.Controls.Border
    $introBorder.Margin = '0,0,0,10'
    $introBorder.Padding = '12'
    $introBorder.CornerRadius = '12'
    $introBorder.Background = [Windows.Media.Brushes]::Transparent
    $introBorder.BorderBrush = [Windows.Media.Brushes]::SlateGray
    $introBorder.BorderThickness = '1'

    $introText = New-Object System.Windows.Controls.TextBlock
    $introText.Text = [string]$section.intro
    $introText.Foreground = [Windows.Media.Brushes]::Gainsboro
    $introText.FontSize = 12
    $introText.TextWrapping = 'Wrap'

    $introBorder.Child = $introText
    $checklistHost.Children.Add($introBorder) | Out-Null
}

